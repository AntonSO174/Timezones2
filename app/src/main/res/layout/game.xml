<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/londonClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/normal_background"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/london"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/NewYourkClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="296dp"
        android:layout_marginTop="148dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/newyourk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/LosAngelesClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/normal_background"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/losangeles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ParisClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/normal_background"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/paris"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/GonKongClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/normal_background"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/gonkong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/TokioClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/normal_background"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/tokio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/CidneyClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="268dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/normal_background"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/cidney"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/moscowButton"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:layout_marginTop="108dp"
        android:text="Москва"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moscowClock" />

    <ImageView
        android:id="@+id/moscowClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="132dp"
        android:src="@mipmap/moskow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/londonButton"
        android:layout_width="186dp"
        android:layout_height="47dp"
        android:layout_marginTop="156dp"
        android:text="Лондон"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/londonClock" />

    <Button
        android:id="@+id/GonKongButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="256dp"
        android:layout_marginTop="392dp"
        android:text="Гон Конг"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GonKongClock" />

    <Button
        android:id="@+id/LosAngelesButton"
        android:layout_width="124dp"
        android:layout_height="63dp"
        android:text="Лос Анджелес"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/moscowButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ParisButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:text="Париж"
        app:layout_constraintEnd_toStartOf="@+id/londonButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ParisClock" />

    <Button
        android:id="@+id/CidneyButton"
        android:layout_width="106dp"
        android:layout_height="41dp"
        android:layout_marginTop="460dp"
        android:text="Сидней"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toEndOf="@+id/moscowButton"
        app:layout_constraintTop_toBottomOf="@+id/CidneyClock" />

    <Button
        android:id="@+id/TokioButton"
        android:layout_width="114dp"
        android:layout_height="41dp"
        android:layout_marginTop="536dp"
        android:text="Токио"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TokioClock" />

    <Button
        android:id="@+id/NewYourkButton"
        android:layout_width="132dp"
        android:layout_height="47dp"
        android:layout_marginTop="204dp"
        android:text="НьюЙорк"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewYourkClock" />

    <Button
        android:id="@+id/HeyButton"
        android:layout_width="172dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="Проверить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996" />


</androidx.constraintlayout.widget.ConstraintLayout>